---
import Layout from '../layouts/Layout.astro';
import ThemeToggle from '../components/ThemeToggle.astro';

const features = [
  {
    icon: 'üîÑ',
    title: 'Automatic Conversion',
    description: 'Parse your .NET Aspire Program.cs and convert it to Coolify-compatible deployments automatically.'
  },
  {
    icon: 'üöÄ',
    title: 'Direct Deployment',
    description: 'Deploy directly to Coolify via REST API, or generate bash scripts for manual execution.'
  },
  {
    icon: 'üóÑÔ∏è',
    title: 'Full Database Support',
    description: 'PostgreSQL, MySQL, MongoDB, Redis, SQL Server ‚Äî all Aspire databases supported out of the box.'
  },
  {
    icon: 'üì¶',
    title: 'Services & Apps',
    description: 'RabbitMQ, Kafka, Keycloak, NPM apps, Docker containers, and more.'
  },
  {
    icon: 'üîó',
    title: 'GitHub Integration',
    description: 'Deploy from public or private GitHub repositories with full GitHub App support.'
  },
  {
    icon: 'üõ†Ô∏è',
    title: 'Programmatic API',
    description: 'Use as a library in your Node.js projects with full TypeScript support and modular imports.'
  }
];

const supportedResources = {
  databases: ['PostgreSQL', 'MySQL', 'MongoDB', 'Redis', 'SQL Server'],
  services: ['RabbitMQ', 'Kafka', 'Keycloak', 'Seq', 'MailDev', 'Elasticsearch'],
  apps: ['NPM/Node.js Apps', 'Docker Containers', 'Dockerfiles', '.NET Projects']
};
---

<Layout title="aspire2coolify - Convert .NET Aspire to Coolify">
  <!-- Navigation -->
  <nav class="nav">
    <div class="nav-content">
      <a href="#" class="logo">
        <span class="logo-icon">‚ö°</span>
        aspire2coolify
      </a>
      <div class="nav-links">
        <a href="#features">Features</a>
        <a href="#quickstart">Quick Start</a>
        <a href="#api">API</a>
        <a href="#resources">Resources</a>
        <a href="https://github.com/quentin-r37/aspire-to-coolify" target="_blank" rel="noopener" class="github-link">
          <svg class="github-icon" viewBox="0 0 24 24" fill="currentColor" width="20" height="20">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          <span class="github-text">GitHub</span>
        </a>
        <ThemeToggle />
      </div>
    </div>
  </nav>

  <!-- Hero -->
  <header class="hero">
    <div class="hero-bg"></div>
    <div class="hero-content">
      <div class="badge">Open Source CLI Tool</div>
      <h1>
        <span class="gradient-text">.NET Aspire</span> to
        <span class="gradient-text-alt">Coolify</span>
      </h1>
      <p class="hero-description">
        Convert your .NET Aspire configurations to Coolify deployments in seconds.
        Parse, generate scripts, or deploy directly via the Coolify REST API.
      </p>
      <div class="hero-actions">
        <a href="#quickstart" class="btn btn-primary">Get Started</a>
        <a href="https://github.com/quentin-r37/aspire-to-coolify" target="_blank" rel="noopener" class="btn btn-secondary">
          View on GitHub
        </a>
      </div>
      <div class="hero-install">
        <div class="install-label">Install with npm</div>
        <div class="install-command">
          <span class="install-prompt">$</span>
          <code>npm install -g aspire2coolify</code>
          <button class="copy-btn" id="hero-copy-btn" aria-label="Copy to clipboard">
            <svg class="copy-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="18" height="18">
              <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
              <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
            </svg>
            <svg class="check-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="18" height="18">
              <polyline points="20 6 9 17 4 12"></polyline>
            </svg>
          </button>
        </div>
        <div class="install-alt">
          or run directly: <code>npx aspire2coolify</code>
        </div>
      </div>
    </div>
  </header>

  <!-- Features -->
  <section id="features" class="features">
    <div class="container">
      <h2 class="section-title">Features</h2>
      <p class="section-subtitle">Everything you need to bridge Aspire and Coolify</p>
      <div class="features-grid">
        {features.map((feature) => (
          <div class="feature-card">
            <span class="feature-icon">{feature.icon}</span>
            <h3>{feature.title}</h3>
            <p>{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Quick Start -->
  <section id="quickstart" class="quickstart">
    <div class="container">
      <h2 class="section-title">Quick Start</h2>
      <p class="section-subtitle">Get up and running in minutes</p>

      <div class="steps">
        <div class="step step-install">
          <div class="step-number">1</div>
          <div class="step-content">
            <h3>Install the CLI</h3>
            <div class="install-box">
              <div class="install-tabs">
                <button class="tab active" data-tab="npm">npm</button>
                <button class="tab" data-tab="npx">npx</button>
                <button class="tab" data-tab="yarn">yarn</button>
                <button class="tab" data-tab="pnpm">pnpm</button>
              </div>
              <div class="install-panels">
                <pre class="panel active" data-panel="npm"><code><span class="prompt">$</span> npm install -g aspire2coolify</code></pre>
                <pre class="panel" data-panel="npx"><code><span class="prompt">$</span> npx aspire2coolify &lt;command&gt;</code></pre>
                <pre class="panel" data-panel="yarn"><code><span class="prompt">$</span> yarn global add aspire2coolify</code></pre>
                <pre class="panel" data-panel="pnpm"><code><span class="prompt">$</span> pnpm add -g aspire2coolify</code></pre>
              </div>
            </div>
            <p class="install-note">Requires Node.js 18+</p>
          </div>
        </div>

        <div class="step">
          <div class="step-number">2</div>
          <div class="step-content">
            <h3>Configure</h3>
            <pre><code>export COOLIFY_API_URL=https://coolify.example.com
export COOLIFY_TOKEN=your-api-token</code></pre>
          </div>
        </div>

        <div class="step">
          <div class="step-number">3</div>
          <div class="step-content">
            <h3>Deploy</h3>
            <pre><code>aspire2coolify deploy ./AppHost/Program.cs \
  --server-id your-server-uuid</code></pre>
          </div>
        </div>
      </div>

      <div class="example">
        <h3>Example Input</h3>
        <pre><code class="language-csharp">var builder = DistributedApplication.CreateBuilder(args);

var postgres = builder.AddPostgres("db")
    .WithDataVolume()
    .WithHostPort(5432);

builder.AddNpmApp("frontend", "../Web")
    .WithReference(postgres)
    .WithHttpEndpoint(env: "PORT")
    .PublishAsDockerFile();

builder.Build().Run();</code></pre>
        <p class="example-note">This automatically creates PostgreSQL database and deploys your frontend app to Coolify!</p>
      </div>
    </div>
  </section>

  <!-- Programmatic API -->
  <section id="api" class="api-section">
    <div class="container">
      <h2 class="section-title">Programmatic API</h2>
      <p class="section-subtitle">Use aspire2coolify as a library in your Node.js projects</p>

      <div class="api-example">
        <pre><code class="language-typescript">import { parseFile, generate, deployToCloudify, CoolifyApiClient } from 'aspire2coolify';

// Parse an Aspire Program.cs file
const { app } = parseFile('./AppHost/Program.cs');

// Generate a bash script
const { script } = generate(app, {
  projectName: 'my-app',
  serverId: 'your-server-uuid',
});

// Or deploy directly via API
const client = new CoolifyApiClient('https://coolify.example.com', 'token');
const summary = await deployToCloudify(client, app, {
  projectUuid: 'project-uuid',
  serverUuid: 'server-uuid',
  environmentName: 'production',
});</code></pre>
      </div>

      <div class="api-features">
        <div class="api-feature">
          <h4>Modular Imports</h4>
          <code>aspire2coolify/parser</code>
          <code>aspire2coolify/api</code>
          <code>aspire2coolify/generator</code>
        </div>
        <div class="api-feature">
          <h4>Full TypeScript Support</h4>
          <p>All types exported for type-safe development</p>
        </div>
        <div class="api-feature">
          <h4>Zero Config</h4>
          <p>Works out of the box with ESM projects</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Supported Resources -->
  <section id="resources" class="resources">
    <div class="container">
      <h2 class="section-title">Supported Resources</h2>
      <p class="section-subtitle">Comprehensive support for Aspire's resource types</p>

      <div class="resources-grid">
        <div class="resource-card">
          <h3>üóÑÔ∏è Databases</h3>
          <ul>
            {supportedResources.databases.map((db) => <li>{db}</li>)}
          </ul>
        </div>
        <div class="resource-card">
          <h3>üîß Services</h3>
          <ul>
            {supportedResources.services.map((svc) => <li>{svc}</li>)}
          </ul>
        </div>
        <div class="resource-card">
          <h3>üì± Applications</h3>
          <ul>
            {supportedResources.apps.map((app) => <li>{app}</li>)}
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA / Support -->
  <section class="cta">
    <div class="container">
      <h2>Support the Project</h2>
      <p>If aspire2coolify helped you save time or simplified your deployments,<br/>consider supporting its development!</p>
      <a href="https://buymeacoffee.com/quentin.roger" target="_blank" rel="noopener" class="coffee-btn">
        <img src="https://cdn.buymeacoffee.com/buttons/v2/default-yellow.png" alt="Buy Me A Coffee" />
      </a>
    </div>
  </section>

  <!-- Footer -->
  <footer class="footer">
    <div class="container">
      <div class="footer-content">
        <div class="footer-brand">
          <span class="logo-icon">‚ö°</span> aspire2coolify
          <p>MIT License</p>
        </div>
        <div class="footer-links">
          <a href="https://github.com/quentin-r37/aspire-to-coolify" target="_blank" rel="noopener">GitHub</a>
          <a href="https://www.npmjs.com/package/aspire2coolify" target="_blank" rel="noopener">npm</a>
          <a href="https://coolify.io/docs/api-reference/api/" target="_blank" rel="noopener">Coolify API</a>
        </div>
      </div>
    </div>
  </footer>
</Layout>

<style>
  /* Navigation */
  .nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    background: var(--nav-bg);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--border);
    transition: background-color 0.3s;
  }

  .nav-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 700;
    font-size: 1.25rem;
    color: var(--text);
  }

  .logo-icon {
    font-size: 1.5rem;
  }

  .nav-links {
    display: flex;
    gap: 1.5rem;
    align-items: center;
  }

  .nav-links a {
    color: var(--text-muted);
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .nav-links a:hover {
    color: var(--text);
  }

  .github-icon {
    opacity: 0.8;
  }

  /* Hero */
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 6rem 2rem 4rem;
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(ellipse at 30% 20%, var(--hero-gradient-1) 0%, transparent 50%),
      radial-gradient(ellipse at 70% 80%, var(--hero-gradient-2) 0%, transparent 50%);
    transition: background 0.3s;
  }

  .hero-content {
    position: relative;
    text-align: center;
    max-width: 800px;
  }

  .badge {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--text-muted);
    margin-bottom: 1.5rem;
    transition: background-color 0.3s, border-color 0.3s;
  }

  .hero h1 {
    font-size: clamp(2.5rem, 8vw, 4.5rem);
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 1.5rem;
  }

  .gradient-text {
    background: linear-gradient(135deg, #818cf8, #6366f1);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .gradient-text-alt {
    background: linear-gradient(135deg, #22d3ee, #0ea5e9);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-description {
    font-size: 1.25rem;
    color: var(--text-muted);
    max-width: 600px;
    margin: 0 auto 2rem;
  }

  .hero-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 3rem;
  }

  .btn {
    padding: 0.875rem 2rem;
    border-radius: 0.5rem;
    font-weight: 600;
    font-size: 1rem;
    transition: all 0.2s;
  }

  .btn-primary {
    background: var(--primary);
    color: white;
  }

  .btn-primary:hover {
    background: var(--primary-dark);
    color: white;
    transform: translateY(-2px);
  }

  .btn-secondary {
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    color: var(--text);
  }

  .btn-secondary:hover {
    border-color: var(--primary);
    color: var(--text);
  }

  .hero-install {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    margin-top: 1rem;
  }

  .install-label {
    font-size: 0.875rem;
    color: var(--text-muted);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .install-command {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 1.5rem;
    background: var(--code-bg);
    border: 2px solid var(--border);
    border-radius: 0.75rem;
    transition: all 0.3s;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.1);
  }

  .install-command:hover {
    border-color: var(--primary);
    box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1), 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }

  .install-prompt {
    color: var(--success);
    font-family: 'JetBrains Mono', monospace;
    font-weight: 600;
    font-size: 1.1rem;
  }

  .install-command code {
    color: var(--text);
    font-size: 1.1rem;
    font-weight: 500;
  }

  .copy-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem;
    background: var(--bg-tertiary);
    border: none;
    border-radius: 0.5rem;
    color: var(--text-muted);
    cursor: pointer;
    transition: all 0.2s;
  }

  .copy-btn:hover {
    background: var(--primary);
    color: white;
  }

  .copy-btn .check-icon {
    display: none;
  }

  .copy-btn.copied .copy-icon {
    display: none;
  }

  .copy-btn.copied .check-icon {
    display: block;
    color: var(--success);
  }

  .copy-btn.copied {
    background: rgba(34, 197, 94, 0.1);
  }

  .install-alt {
    font-size: 0.875rem;
    color: var(--text-muted);
  }

  .install-alt code {
    color: var(--secondary);
    background: var(--bg-tertiary);
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.8rem;
  }

  /* Sections */
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: 0.5rem;
  }

  .section-subtitle {
    text-align: center;
    color: var(--text-muted);
    font-size: 1.125rem;
    margin-bottom: 3rem;
  }

  /* Features */
  .features {
    padding: 6rem 0;
    background: var(--bg-secondary);
    transition: background-color 0.3s;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 1.5rem;
  }

  .feature-card {
    padding: 2rem;
    background: var(--card-bg);
    border: 1px solid var(--border);
    border-radius: 1rem;
    transition: all 0.3s;
  }

  .feature-card:hover {
    border-color: var(--primary);
    transform: translateY(-4px);
  }

  .feature-icon {
    font-size: 2rem;
    margin-bottom: 1rem;
    display: block;
  }

  .feature-card h3 {
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
  }

  .feature-card p {
    color: var(--text-muted);
  }

  /* Quick Start */
  .quickstart {
    padding: 6rem 0;
  }

  .steps {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    margin-bottom: 4rem;
  }

  .step {
    display: flex;
    gap: 1.5rem;
    align-items: flex-start;
  }

  .step-number {
    flex-shrink: 0;
    width: 3rem;
    height: 3rem;
    background: var(--primary);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 1.25rem;
  }

  .step-content {
    flex: 1;
  }

  .step-content h3 {
    font-size: 1.25rem;
    margin-bottom: 0.75rem;
  }

  .step-content pre {
    background: var(--code-bg);
    border: 1px solid var(--border);
    border-radius: 0.5rem;
    padding: 1rem 1.25rem;
    overflow-x: auto;
    transition: background-color 0.3s, border-color 0.3s;
  }

  .step-content code {
    color: var(--secondary);
    font-size: 0.9rem;
  }

  /* Install Box with Tabs */
  .install-box {
    background: var(--code-bg);
    border: 2px solid var(--border);
    border-radius: 0.75rem;
    overflow: hidden;
    transition: border-color 0.3s;
  }

  .install-box:hover {
    border-color: var(--primary);
  }

  .install-tabs {
    display: flex;
    background: var(--bg-tertiary);
    border-bottom: 1px solid var(--border);
  }

  .install-tabs .tab {
    flex: 1;
    padding: 0.75rem 1rem;
    background: none;
    border: none;
    color: var(--text-muted);
    font-weight: 500;
    font-size: 0.875rem;
    cursor: pointer;
    transition: all 0.2s;
    border-bottom: 2px solid transparent;
    margin-bottom: -1px;
  }

  .install-tabs .tab:hover {
    color: var(--text);
    background: var(--code-bg);
  }

  .install-tabs .tab.active {
    color: var(--primary);
    background: var(--code-bg);
    border-bottom-color: var(--primary);
  }

  .install-panels {
    position: relative;
  }

  .install-panels .panel {
    display: none;
    margin: 0;
    padding: 1.25rem 1.5rem;
    background: transparent;
    border: none;
    border-radius: 0;
  }

  .install-panels .panel.active {
    display: block;
  }

  .install-panels .panel code {
    font-size: 1rem;
    color: var(--text);
  }

  .install-panels .prompt {
    color: var(--success);
    margin-right: 0.5rem;
    font-weight: 600;
  }

  .install-note {
    margin-top: 0.75rem;
    font-size: 0.8rem;
    color: var(--text-muted);
  }

  .example {
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: 1rem;
    padding: 2rem;
    transition: background-color 0.3s, border-color 0.3s;
  }

  .example h3 {
    margin-bottom: 1rem;
  }

  .example pre {
    background: var(--code-bg);
    border: 1px solid var(--border);
    border-radius: 0.5rem;
    padding: 1.5rem;
    overflow-x: auto;
    margin-bottom: 1rem;
    transition: background-color 0.3s, border-color 0.3s;
  }

  .example code {
    color: var(--text-muted);
    font-size: 0.875rem;
    line-height: 1.7;
  }

  .example-note {
    color: var(--success);
    font-weight: 500;
  }

  /* Resources */
  .resources {
    padding: 6rem 0;
    background: var(--bg-secondary);
    transition: background-color 0.3s;
  }

  .resources-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
  }

  .resource-card {
    background: var(--card-bg);
    border: 1px solid var(--border);
    border-radius: 1rem;
    padding: 2rem;
    transition: background-color 0.3s, border-color 0.3s;
  }

  .resource-card h3 {
    font-size: 1.25rem;
    margin-bottom: 1rem;
  }

  .resource-card ul {
