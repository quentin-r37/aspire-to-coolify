<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Hero copy button
    const copyBtn = document.getElementById('hero-copy-btn');
    if (copyBtn) {
      copyBtn.addEventListener('click', async () => {
        await navigator.clipboard.writeText('npm install -g aspire2coolify');
        copyBtn.classList.add('copied');
        setTimeout(() => {
          copyBtn.classList.remove('copied');
        }, 2000);
      });
    }

    // Install tabs
    const tabs = document.querySelectorAll('.install-tabs .tab');
    const panels = document.querySelectorAll('.install-panels .panel');

    tabs.forEach(tab => {
      tab.addEventListener('click', () => {
        const targetPanel = tab.dataset.tab;

        // Update tabs
        tabs.forEach(t => t.classList.remove('active'));
        tab.classList.add('active');

        // Update panels
        panels.forEach(p => {
          p.classList.toggle('active', p.dataset.panel === targetPanel);
        });
      });
    });
  });
</script>
