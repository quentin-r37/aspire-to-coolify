{
  "name": "aspire2coolify",
  "version": "2.0.16",
  "description": "CLI tool to convert .NET Aspire configurations to Coolify CLI commands",
  "type": "module",
  "main": "dist/cli/index.js",
  "bin": {
    "aspire2coolify": "dist/cli/index.js"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/quentin-r37/aspire-to-coolify.git"
  },
  "homepage": "https://github.com/quentin-r37/aspire-to-coolify#readme",
  "bugs": {
    "url": "https://github.com/quentin-r37/aspire-to-coolify/issues"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:run": "vitest run",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "format": "prettier --write src tests",
    "format:check": "prettier --check src tests",
    "typecheck": "tsc --noEmit",
    "start": "node dist/cli/index.js"
  },
  "keywords": [
    "aspire",
    "coolify",
    "dotnet",
    "cli",
    "devops",
    "deployment"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "commander": "^12.1.0",
    "cosmiconfig": "^9.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^22.10.0",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.7.4",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
